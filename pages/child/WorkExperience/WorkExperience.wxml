<view class='selsect'>
  <view class='sel_child'>
     <view class='sel_left'>公司名称</view>
     <view class='sel_right'>
         <text>{{company}}</text>
         <image src='http://www.liujiarong.top/WX/wx_unfold.png'></image>
     </view>
  </view>
</view> 

<view class='selsect'>
  <view class='sel_child'>
     <view class='sel_left'>你的职位</view>
     <view class='sel_right'>
         <text>{{position}}</text>
         <image src='http://www.liujiarong.top/WX/wx_unfold.png'></image>
     </view>
  </view>
</view> 

<view class='selsect'>
  <view class='sel_child'>
     <view class='sel_left'>入职时间</view>
    <picker class="weui-btn" mode="date" value="{{entrytime}}" fields="month" data-type='endDate' bindchange="bindend">
     <view class='sel_right'>
         <text>{{entrytime}}</text>
         <image src='http://www.liujiarong.top/WX/wx_unfold.png'></image>
     </view>
    </picker>
  </view>
</view> 

<view class='selsect'>
  <view class='sel_child'>
     <view class='sel_left'>离职时间</view>
    <picker class="weui-btn" mode="date" value="{{entrytime}}" fields="month"  bindchange="bindDateChange">
     <view class='sel_right'>
         <text>{{endtime}}</text>
         <image src='http://www.liujiarong.top/WX/wx_unfold.png'></image>
     </view>
    </picker>
  </view>
</view> 

<view class='show'>
  工作内容
</view>
<view class='text_count'>
  <textarea placeholder='请输入公作内容...'>
  </textarea>
</view>
<button class='save'>保存</button>
<view class='remove_this' bindtap="openConfirm">删除此工作经历</view>

