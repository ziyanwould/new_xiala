<!--pages/child/ProfileEditor/ProfileEditor.wxml-->
<view class='selsect'>
  <view class='sel_child' wx:for="{{selectPerson}}" wx:key="item.id"   bindtap="jumpToCity" data-url="{{item.url}} ">
     <view class='sel_left'>{{item.name}}</view>
     <view class='sel_right'>
          <text wx:if="{{item.count}}">{{item.count}}</text> 
         <input wx:if="{{item.input}}" style='padding-right:51rpx;' value='{{item.input}}'></input> 
         <image wx:if="{{item.picUrl}}" src='{{item.picUrl}}'></image>
     </view>
  </view>
</view>
<view class='show'>
  补充说明
</view>
<textarea placeholder='请填写补充说明...' class='text_count'>
</textarea>
<button class='save'>保存</button>