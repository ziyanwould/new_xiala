/**index.wxss**/
/*弹窗口*/
@import "../child/Template/Template.wxss";  
/*下拉样式*/
@import '../../utils/refreshView.wxss';
/*列表框样式*/
@import '/pages/child/Template/List.wxss';
.active{
 color: #00b289;
}
/*刷新加载的样式*/
.refresh-block{
  background-color:#0544DA;
}
.refresh-block .refreshing_text{
  color:#FFFFFF;
}
.loadMore-block{
   background-color:#FFFFFF;
}
/*新的列表*/
.paTimejob{
  height: 164rpx;
  overflow:hidden;
  padding: 0 30rpx;
  border-bottom: 20rpx solid #E5E5E5;
}
.sec{
  position: relative;
   display: flex;
   justify-content:space-between;
}
.paTimejob .titles{
  font-size: 34rpx;
  font-weight: 500;
}

.paTimejob .own{
   position: relative;
   top: -5rpx;
   font-size: 20rpx;
   display: inline-block;
   color: #ffcd40;
   border: 1rpx solid #ffcd40;
   padding: 0 12rpx;
   border-radius:6rpx; 
   margin-left: 10rpx;
}
.sec_right .pays{
 font-size: 20rpx;
 color: red;
}
.paTimejob .tag{
  font-size: 22rpx;
  color: #b5b5b6;
  background: #EDEDED;
  display: inline-block;
  padding: 0 10rpx;
  margin-right: 15rpx;
  border-radius: 6rpx;

}
.paTimejob .time{
  font-size: 20rpx;
  color: #999999;
}
.paTimejob .sec:nth-of-type(2){
  margin-top: 10rpx;
}
.paTimejob .sec:nth-of-type(1){
  margin-top: 20rpx;
}